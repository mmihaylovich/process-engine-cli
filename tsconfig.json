{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./built",
        "sourceMap": true,
        "types": [
            // add node as an option
            "node"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "baseUrl": ".",
    "paths": {
        "dotenv": ["node_modules/dotenv/lib/main.js"] // This mapping is relative to "baseUrl"
    }
}