{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution" : "Node",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./built",
        "sourceMap": true,
        "target": "es2017",
        "lib": [
            "es2017","dom","es2015.symbol"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            // add node as an option
            "node",
            "reflect-metadata"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]
    },
    "exclude": [
        "node_modules"
    ]
}